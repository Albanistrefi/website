---
import { Link } from './Link';

interface Crumb {
  name: string;
  href: string;
  current?: boolean;
}

interface Props {
  items: Crumb[];
  class?: string;
}

const { items, class: className } = Astro.props;
---

<nav aria-label="Breadcrumb" class={className || ''}>
  <ol class="flex flex-wrap items-center gap-2 text-xs font-mono text-text-tertiary">
    {items.map((item, index) => (
      <li class="flex items-center gap-2">
        <Link
          href={item.href}
          variant="unstyled"
          className={`hover:text-accent-primary transition-colors ${item.current ? 'text-text-primary' : ''}`.trim()}
          aria-current={item.current ? 'page' : undefined}
        >
          {item.name}
        </Link>
        {index < items.length - 1 && <span aria-hidden="true">/</span>}
      </li>
    ))}
  </ol>
</nav>
